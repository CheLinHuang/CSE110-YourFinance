<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.seancai.yfi_ui.Dashboard"
    tools:showIn="@layout/activity_dashboard"
    android:orientation="vertical"
    android:weightSum="1"
    android:backgroundTint="@android:color/darker_gray">


    <TextView
        android:text="Y-Fi Finance Calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:gravity="center_horizontal"
        android:layout_weight="0.07"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <TextView
        android:text="Insert $ spent here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_weight="0.30" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_weight="0.28">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/scanwhite"
            android:id="@+id/imageButton13"
            android:layout_weight="0.5"
            android:backgroundTint="@android:color/darker_gray"
            android:onClick = "toScan"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/financewhite"
            android:id="@+id/imageButton7"
            android:layout_weight="0.5"
            android:backgroundTint="@android:color/darker_gray"
            android:onClick = "toFinance"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_weight="0.34">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/groupwhite"
            android:id="@+id/imageButton9"
            android:layout_weight="0.5"
            android:backgroundTint="@android:color/darker_gray"
            android:onClick = "toGroup"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/settingswhite"
            android:id="@+id/imageButton10"
            android:layout_weight="0.5"
            android:backgroundTint="@android:color/darker_gray"
            android:onClick = "toSettings"/>
    </LinearLayout>
</LinearLayout>
