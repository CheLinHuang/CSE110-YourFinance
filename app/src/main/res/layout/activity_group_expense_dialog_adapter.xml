<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_group_adapter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    tools:context="teamhardcoder.y_fi.GroupAdapter">


    <TextView
        android:id="@+id/memberName"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:hint="Member Name"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:text="$"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/dollarSign_dialog"
        android:layout_toRightOf="@+id/memberName" />

    <EditText
        android:id="@+id/editSplitAmount"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Split Amount"
        android:inputType="numberDecimal"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignBaseline="@+id/dollarSign_dialog"
        android:layout_alignBottom="@+id/dollarSign_dialog"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:maxLines="1"
        android:maxLength="8"
        android:layout_toRightOf="@+id/dollarSign_dialog"
        android:layout_toEndOf="@+id/dollarSign_dialog">
        <requestFocus/>
    </EditText>




</RelativeLayout>